{
  "name": "hibernator",
  "version": "1.0.0",
  "description": "Cross-platform background app that auto-hibernates devices at scheduled times",
  "main": "main.js",
  "scripts": {
    "start": "nodemon --ext js,css,html --exec electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "electron-store": "^11.0.2",
    "node-schedule": "^2.1.1",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.example.hibernator",
    "productName": "Hibernator",
    "win": {
      "target": "nsis",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
